# Environment Configuration for ANRS Backend

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5501

# MySQL Database Configuration (XAMPP)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=anrs_db

# Alternative: Custom MySQL User (Recommended for production)
# DB_USER=anrs_user
# DB_PASSWORD=secure_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production_2024_anrs_admin
JWT_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12

# Admin Configuration
ADMIN_REGISTRATION_KEY=ANRS_ADMIN_2024

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:5501
CORS_CREDENTIALS=true
